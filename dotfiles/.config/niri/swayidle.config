timeout  60  'brightnessctl -d tpacpi::kbd_backlight -s  && brightnessctl -d tpacpi::kbd_backlight set 0'  resume  'brightnessctl -d tpacpi::kbd_backlight -r'
timeout 120  'brightnessctl -d amdgpu_bl1 -s  && brightnessctl -d amdgpu_bl1 set 0'  resume  'brightnessctl -d amdgpu_bl1 -r'
timeout 285  'wayland-screen-shooter multiblur /tmp/screen-'  resume  'rm /tmp/screen-*'
timeout 290  'mpd-control allpause'                           resume  'mpd-control allresume'
timeout 295  'notify-send --expire-time 4000 --urgency low --transient "Going to idle in 5 seconds!"'   resume  'notify-send  --expire-time 4000 --urgency low --transient "Welcome back!"'
timeout 300  'pidof swaylock || swaylock --daemonize --config ~/.config/swaylock/config'
timeout 410  'niri msg action power-off-monitors'             resume  'niri msg action power-on-monitors'
before-sleep 'pidof swaylock || swaylock --daemonize --config ~/.config/swaylock/config'
timeout 600  'systemctl suspend'                              resume  'niri msg action power-on-monitors'
after-resume 'niri msg action power-on-monitors'
lock         'mpd-control allpause && wayland-screen-shooter multiblur/tmp/screen- && pidof swaylock || swaylock --daemonize --config ~/.config/swaylock/config'
unlock       'mpd-control allresume'
