timeout 240  'brightnessctl -d tpacpi::kbd_backlight -s  && brightnessctl -d tpacpi::kbd_backlight set 0'  resume  'brightnessctl -d tpacpi::kbd_backlight -r'
timeout 240  'brightnessctl -d amdgpu_bl1 -s  && brightnessctl -d amdgpu_bl1 set 0'  resume  'brightnessctl -d amdgpu_bl1 -r'
timeout 290  'wayland-screen-shooter multiblur /tmp/screen-'  resume  'rm /tmp/screen-*'
timeout 295  'notify-send --expire-time 4000 --urgency low --transient "Going to idle in 5 seconds!"'   resume  'notify-send  --expire-time 4000 --urgency low --transient "Welcome back!"'
timeout 300  'gtklock -d -s ~/.config/gtklock/style.css'
timeout 410  'wlopm --off \*'                                 resume  'wlopm --on \*'
timeout 420  'brightnessctl -d tpacpi::kbd_backlight -s'      resume  'brightnessctl -d tpacpi::kbd_backlight -r'
before-sleep 'gtklock -d -s ~/.config/gtklock/style.css'
timeout 600  'systemctl suspend'                              resume  'wlopm --on \*'
after-resume 'wlopm --on \*'
