timeout  60  'brightnessctl -d tpacpi::kbd_backlight -s  && brightnessctl -d tpacpi::kbd_backlight set 0'  resume  'brightnessctl -d tpacpi::kbd_backlight -r'
timeout 120  'brightnessctl -d amdgpu_bl1 -s  && brightnessctl -d amdgpu_bl1 set 0'  resume  'brightnessctl -d amdgpu_bl1 -r'
timeout 285  'wayland-lock-screen screenshots'                resume  'wayland-lock-screen clearscreenshots'
timeout 290  'wayland-lock-screen pickleplayers'              resume  'wayland-lock-screen resumeplayers'
timeout 295  'notify-send --expire-time 4000 --urgency low --transient "Going to idle in 5 seconds!"'   resume  'notify-send  --expire-time 4000 --urgency low --transient "Welcome back!"'
timeout 300  'wayland-lock-screen lock'                       resume  'wayland-lock-screen unlock'
timeout 410  'wlopm --off \*'                                 resume  'wlopm --on \*'
before-sleep 'wayland-lock-screen lock'
timeout 600  'systemctl suspend'                              resume  'wlopm --on \*'
after-resume 'wlopm --on \*'
lock         'wayland-screen-lock locknow'
unlock       'wayland-screen-lock unlock'
