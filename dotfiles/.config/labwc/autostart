#   timeout 242  'brightnessctl -d amdgpu_bl1 -s  && brightnessctl -d amdgpu_bl1 set 0' \
#        resume  'brightnessctl -d amdgpu_bl1 -r' \
#  timeout 285  'wayland-lock-screen screenshots' \
#       resume  'wayland-lock-screen clearscreenshots' \
#  timeout 290  'wayland-lock-screen pickleplayers' \
#       resume  'wayland-lock-screen resumeplayers' \
